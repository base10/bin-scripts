<figcaption>
<img
    srcset="
    <% images.each do |responsive_image| -%>
      <%= responsive_image.image_path %> <%= responsive_image.width %>w,
    <% end -%>"
    sizes="
    <% images.each do |responsive_image| -%>
      <% if responsive_image.main? -%>
      <%= responsive_image.width %>px,
      <%- else -%>
      (max-width: <%= responsive_image.max_dimension %>) <%= responsive_image.width %>px,
      <% end -%>
    <% end -%>"
    src="<%= main_image.image_path %>"
    height="auto"
    width="100%"
    alt="<%= caption %>"
>
<caption><%= caption %></caption>
</figcaption>
